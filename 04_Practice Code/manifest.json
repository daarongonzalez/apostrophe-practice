{
    "name": "Apostrophe Inc",
    "version": "6.0",
    "manifest_versions": 3,
    "description": "Apostrophe Inc article analyzer",
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/apostrophe.png",
        "default_popup": "popup.html"
    }
    
}